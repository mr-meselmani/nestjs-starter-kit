{
  "name": "nestjs-starter-kit",
  "version": "0.0.1",
  "description": "ðŸ¹ðŸ‘‘ A starter kit for NestJS with Prisma, Passport, Zod, Swagger, and more. Built to be a solid foundation for YOUR next project ðŸ‘‘ðŸ¹.",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Ahmad Meselmani",
    "title": "Software Engineer | Innovator | Entrepreneur | Learner",
    "github": "https://github.com/mr-meselmani",
    "twitter": "https://x.com/mr_meselmani"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mr-meselmani/nestjs-starter-kit.git"
  },
  "keywords": [
    "nestjs",
    "prisma",
    "passport",
    "zod",
    "pnpm",
    "swagger",
    "starter-kit",
    "boilerplate",
    "api",
    "rest",
    "typescript",
    "javascript",
    "nodejs",
    "express",
    "orm",
    "database",
    "postgres",
    "authentication",
    "authorization",
    "jwt",
    "github",
    "docker",
    "aws"
  ],
  "engines": {
    "node": ">=22.18.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "app:docs": "pnpm dlx @compodoc/compodoc -p tsconfig.json -s",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate dev  --schema=./prisma/schema.prisma",
    "db:seed": "prisma db seed ",
    "db:studio": "prisma studio  --schema=./prisma/schema.prisma",
    "db:reset": "prisma migrate reset  --schema=./prisma/schema.prisma --skip-seed"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.16.2",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "helmet": "^8.1.0",
    "nestjs-zod": "^5.0.1",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.1.0",
    "rxjs": "^7.8.2",
    "swagger-themes": "^1.4.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.30",
    "@eslint/js": "^9.36.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
